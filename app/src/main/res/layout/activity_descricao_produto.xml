<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    tools:context=".views.DescricaoProdutoActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="486dp"
        android:layout_height="792dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/img_produto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"

        />


    <TextView
        android:id="@+id/produto"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/img_produto"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Produto"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/nome"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/produto"
        android:layout_marginStart="100dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/produto"
        android:text="Nome
"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textpreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/produto"
        android:layout_alignStart="@+id/produto"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="Preço"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/nome"
        android:layout_alignTop="@+id/textpreco"

        android:layout_marginTop="0dp"
        android:text="R$ 0,00"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtpromocao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textpreco"
        android:layout_alignStart="@+id/textpreco"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="Promoção"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/promocao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignStart="@+id/preco"
        android:layout_alignTop="@+id/txtpromocao"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="-"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
    android:id="@+id/txtprecopromo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtpromocao"
    android:layout_alignStart="@+id/textpreco"
    android:layout_marginStart="0dp"
    android:layout_marginTop="20dp"
    android:text="Preço Promo:"
    android:textColor="@android:color/black"
    android:textSize="15dp" />

    <TextView
        android:id="@+id/precopromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignStart="@+id/promocao"
        android:layout_alignTop="@+id/txtprecopromo"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="-"
        android:textColor="@android:color/black"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/txtparcelamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtprecopromo"
        android:layout_alignStart="@+id/txtprecopromo"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="Parcelas:"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/parcelamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignStart="@+id/precopromo"
        android:layout_alignTop="@+id/txtparcelamento"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="-"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txttamanhos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtparcelamento"
        android:layout_alignStart="@+id/txtparcelamento"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="Tamanhos:"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tamanhos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/parcelamento"
        android:layout_alignTop="@+id/txttamanhos"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="PP-P-M-G-GG"

        android:textColor="@android:color/black"
        android:textSize="15dp" />


</RelativeLayout>